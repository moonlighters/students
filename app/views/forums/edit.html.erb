<% @page_title = "Редактирование форума" %>
<% if @forum.parent %>
  <h2>Редактирование подфорума в "<%=h @forum.parent.title %>"</h2>
<% else %>
  <h2>Редактирование форума</h2>
<% end %>

<%= render :partial => "form", :locals => {:forum => @forum} %>

<%= button_to 'Удалить', forum_path( @forum ), :method => :delete %>

<%= link_to 'Назад', forum_path( @forum ) %>
