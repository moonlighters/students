<h1>Вход</h1>

<% form_for @user_session, :url => login_url do |f| %>
  <%= f.error_messages :header_message => "Ошибка входа" %>

  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </p>

  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.check_box :remember_me %><%= f.label :remember_me %>
  </p>
  
  <p>
    <%= f.submit "Войти" %>
  </p>
<% end %>
