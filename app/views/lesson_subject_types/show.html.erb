<% @page_title =  h( @lesson_subject_type.lesson_type.name ) \
                  + " по " + h( @lesson_subject_type.subject.name ) \
                  + " в группе " + h( @lesson_subject_type.group.name ) %>
<h2>Расписание > Просмотр типа занятия</h2>

<% subject = @lesson_subject_type.subject %>
<% group   = @lesson_subject_type.group %>
<% teacher = @lesson_subject_type.teacher %>
<% homepage = @lesson_subject_type.homepage %>

<p>
  <b>Тип:</b>
  <%=h @lesson_subject_type.lesson_type.name %>
</p>
<p>
  <b>Предмет:</b>
  <%=link_to h( subject.name ), lesson_subject_path( subject ) %>
</p>

<p>
  <b>Группа:</b>
  <%=link_to h( group.name ), group_path( group ) %>
</p>

<p>
  <b>Преподаватель:</b>
  <%=link_to h( teacher.name ), teacher_path( teacher ) %>
</p>
<% unless homepage.nil? or homepage.empty? %>
  <p>
    <b>Страничка в интернете:</b>
    <%=link_to h( @lesson_subject_type.homepage ), @lesson_subject_type.homepage %>
  </p>
<% end %>


<%= link_to 'Править', edit_lesson_subject_type_path(@lesson_subject_type) %> |
<%= link_to 'Назад', lesson_subject_path(@lesson_subject_type.subject) %>
